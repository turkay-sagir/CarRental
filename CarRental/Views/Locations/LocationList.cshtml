@model List<GetLocationQueryResult>
@{
    ViewData["Title"] = "LocationList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Lokasyon Listesi</h2>
            <table id="tbl3" class="table table-bordered">
                <thead>
                    <tr class ="table table-secondary">
                        <th>#</th>
                        <th>Lokasyon Adı</th>
                        <th>Lokasyon Durumu</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string state = "";
                        string value = "";

                        if (item.Status == true)
                        {
                            state = "bg-success";
                            value = "Aktif";
                        }
                        else
                        {
                            state = "bg-dark";
                            value = "Pasif";
                        }


                        <tr>
                            <td>@item.LocationId</td>
                            <td>@item.LocationName</td>
                            <td><a href="/Locations/ChangeLocationStatus/@item.LocationId"><span class="badge @state" style="color:lemonchiffon; font-size:16px">@value</span></a></td>
                            <td><a href="/Locations/RemoveLocation/@item.LocationId" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Locations/UpdateLocation/@item.LocationId" class="btn btn-success">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Locations/CreateLocation/" class="btn btn-info">Yeni Lokasyon Ekle</a>

            <script type="text/javascript" src="https://code.jquery.com/jquery-3.7.1.js"></script>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.min.js"></script>
            <script type="text/javascript" src="https://cdn.datatables.net/2.1.4/js/dataTables.js"></script>
            <script type="text/javascript" src="https://cdn.datatables.net/2.1.4/js/dataTables.bootstrap4.js"></script>


            <link href="https://cdn.datatables.net/2.0.1/css/dataTables.bootstrap5.css" rel="stylesheet" />

            <script>
                $('#tbl3').DataTable({
                    language: {
                        url: "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
                    }
                });
            </script>

        </div>
    </div>
</div>

